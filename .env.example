# =============================================================================
# Configuration - Plateforme de Contenu Cloud-Native
# =============================================================================
# Copiez ce fichier vers .env et remplissez les valeurs

# -----------------------------------------------------------------------------
# Flask
# -----------------------------------------------------------------------------
FLASK_ENV=development
FLASK_DEBUG=True
SECRET_KEY=change-this-in-production

# -----------------------------------------------------------------------------
# Azure Blob Storage
# -----------------------------------------------------------------------------
# Chaîne de connexion Azure Storage (à obtenir depuis Azure Portal)
AZURE_STORAGE_CONNECTION_STRING=DefaultEndpointsProtocol=https;AccountName=...

# Nom du conteneur blob
BLOB_CONTAINER_NAME=content

# -----------------------------------------------------------------------------
# Fichiers de contenu
# -----------------------------------------------------------------------------
EVENTS_FILE=events.json
NEWS_FILE=news.json
FAQ_FILE=faq.json

# -----------------------------------------------------------------------------
# Cache
# -----------------------------------------------------------------------------
# Durée de vie du cache en secondes
CACHE_TTL=60

# -----------------------------------------------------------------------------
# Mode local (pour le développement sans Azure)
# -----------------------------------------------------------------------------
USE_LOCAL_FILES=True
LOCAL_DATA_PATH=data

# -----------------------------------------------------------------------------
# Serveur
# -----------------------------------------------------------------------------
PORT=5000
