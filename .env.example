# Azure Storage Configuration
# ===========================
# Copy this file to .env and fill in your actual values
# NEVER commit .env to version control!

# Azure Blob Storage connection string
# Get this from Azure Portal > Storage Account > Access Keys
AZURE_STORAGE_CONNECTION_STRING=DefaultEndpointsProtocol=https;AccountName=YOUR_ACCOUNT_NAME;AccountKey=YOUR_ACCOUNT_KEY;EndpointSuffix=core.windows.net

# Azure Blob Storage container name for content files
AZURE_STORAGE_CONTAINER_NAME=content

# Application mode (set to 'mock' for local development without Azure)
APP_MODE=mock

# Flask configuration
FLASK_APP=app.main:app
FLASK_ENV=development
FLASK_DEBUG=1
